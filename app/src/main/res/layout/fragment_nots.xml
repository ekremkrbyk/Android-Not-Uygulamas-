<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/material_dynamic_neutral20"
    tools:context=".view.notsFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/cardview_dark_background"
        android:fontFamily="serif"
        android:text="@string/BenimNotlarÄ±m"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral_variant70"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/baslikText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:foregroundTint="#E1DCDC"
        android:hint="@string/ba_l_k_giriniz"
        android:inputType="text"
        android:textColor="#E1E1E1"
        android:textColorHint="#C1B8B8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/notText"
        android:layout_width="410dp"
        android:layout_height="630dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/not_giriniz"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="#E1E1E1"
        android:textColorHint="#C1B8B8"
        android:textCursorDrawable="?android:attr/textCursorDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikText"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/kydtBtn"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:onClick="kaydet"
        android:text="@string/kaydet"
        android:textColorHighlight="#06499A"
        android:textColorHint="#06499A"
        android:textColorLink="#06499A"
        app:layout_constraintBottom_toBottomOf="@+id/baslikText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
